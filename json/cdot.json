{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "https://raw.githubusercontent.com/Mazhar1201/fit3179/main/csv/regionalcdot.csv"},
  "background":"whitesmoke",
  "width":400,
  "height":200,
  "encoding": {
    "x": {
      "field": "Years",
      "type": "quantitative",
      "title": "Years of Schooling"
    },
    "y": {
      "field": "Region",
      "type": "nominal",
      "title": "Region",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false
      }
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "Region",
          "type": "nominal"
        },
        "color": {"value":"black"}
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "color": {
          "field": "Value",
          "type": "nominal",
          "scale": {
            "domain": ["Mean Years of Schooling", "Expected Years of Schooling"],
            "range": ["#ff0000", "#00fff7 "]
          },
          "title": "Data",
          "legend":{
            "direction": "horizontal",
            "orient": "top"
          }
        },
        "size": {"value": 100},
        "opacity": {"value": 1},
        "tooltip":[
          {"field":"Years", "type": "quantitative"}
        ]
      }
    }
  ]
}