{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "autosize": {"resize": true},
    "data": {
      "url": "https://raw.githubusercontent.com/Mazhar1201/fit3179/main/map.csv",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "vconcat": [
      {
        "title": "HDI Scores of Countries (2021)",
        "width": 800,
        "height": 400,
        "projection": {"type": "equalEarth"},
        "layer": [
          {
            "transform": [
              {
                "calculate": "'Data is not available in ' + datum.properties.NAME",
                "as": "note"
              }
            ],
            "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "grey"},
            "encoding": {"tooltip": {"field": "note"}}
          },
          {
            "transform": [
              {
                "lookup": "properties.NAME",
                "from": {
                  "data": {
                    "url": "https://raw.githubusercontent.com/Mazhar1201/fit3179/main/map.csv"
                  },
                  "key": "Country",
                  "fields": ["CurrentScore", "CurrentRank"]
                }
              },
              {
                "calculate": "datum.CurrentScore",
                "as": "HDI Score (2021)"
              }
            ],
            "mark": {"type": "geoshape", "stroke": "grey"},
            "params": [{"name": "countrySelection", "select": {"type": "point", "on": "mouseover"}}],
            "encoding": {
              "color": {
                "field": "HDI Score (2021)",
                "type": "quantitative",
                "scale": {
                  "type": "threshold",
                  "domain": [0.550, 0.700, 0.800],
                  "range": ["#fe9929", "#ffffd4", "#74a9cf", "#0570b0"]
                }
              },
              "tooltip": [
                {"field": "properties.NAME","type": "nominal","title": "Country"},
                {"field": "CurrentRank", "type": "quantitative", "title": "2021 HDI Rank"},
                {"field": "CurrentScore","type": "quantitative","title": "2021 HDI Score"}
              ]
            }
          }
        ]
    }
    ]  
}